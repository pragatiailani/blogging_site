<%- include("./partials/head.ejs") %>
<h1>Home Page</h1>

<div class="container mt-4">
    <div class="row row-cols-4">
        <% blogs.forEach(blog => { %>
            <div class="col">
                <div class="card" style="width: 18rem">
                    <img src="<%- blog.coverImageURL %>" class="card-img-top" alt="cover image" height="200px"/>
                    <div class="card-body">
                        <h5 class="card-title"><%-blog.title%></h5>
                        <a href="blog/<%-blog._id%>"" class="btn btn-primary">Read this Blog</a>
                    </div>
                </div>
            </div>
        <% }) %>
    </div>
</div>

<%- include("./partials/scripts.ejs") %>
